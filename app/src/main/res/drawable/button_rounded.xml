<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="30dip" />
            <gradient android:angle="-90" android:startColor="#ffae33" android:endColor="#FFB43F"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="30dip" />
            <solid android:color="#ffae33"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle" >
            <solid android:color="#FFD6AB"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="30dip" />
            <gradient android:angle="-90" android:startColor="#ffae33" android:endColor="#ffae34" />
        </shape>
    </item>
</selector>