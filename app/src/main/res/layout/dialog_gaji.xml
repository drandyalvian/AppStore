<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_btn3"
    android:padding="30dp"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/namaPegawai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Nama Pegawai"
        android:fontFamily="@font/mregular"
        android:textColor="@color/color5"
        android:layout_marginBottom="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color6"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mlight"
            android:textSize="16sp"
            android:textColor="@color/color5"
            android:layout_marginTop="20dp"
            android:text="Total Gaji"/>


<!--        <TextView-->
<!--            android:id="@+id/viewCicilanPinjaman"-->
<!--            android:layout_width="fill_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:fontFamily="@font/mlight"-->
<!--            android:textSize="16sp"-->
<!--            android:gravity="right"-->
<!--            android:textColor="@color/color5"-->
<!--            android:layout_marginTop="20dp"-->
<!--            android:text="Cicilan ke : xx"/>-->

        <TextView
            android:id="@+id/viewReset"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mregular"
            android:textSize="16sp"
            android:gravity="right"
            android:textColor="#FF0000"
            android:layout_marginTop="20dp"
            android:text="Reset"/>

    </LinearLayout>

    <TextView
        android:id="@+id/viewTotalGaji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Rp.XXX"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/mlight"
        android:textColor="@color/color5"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mlight"
        android:textSize="16sp"
        android:textColor="@color/color5"
        android:layout_marginTop="0dp"
        android:text="Sisa Pinjaman"/>

    <TextView
        android:id="@+id/viewTotalCicilan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mlight"
        android:textSize="16sp"
        android:textColor="@color/color5"
        android:layout_marginTop="5dp"
        android:text="Rp.XXX"/>

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/check_setor_pinjaman"
        android:text="Bayar Angsuran"
        android:fontFamily="@font/mlight"
        android:textColor="@color/color5"
        android:layout_marginTop="7dp"
        />


    <LinearLayout
        android:layout_width="fill_parent"
       android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPdf"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="36dp"
            android:textColor="#ffffff"
            android:background="@drawable/button_retangle"
            android:drawableLeft="@drawable/ic_pdf"
            android:paddingLeft="8dp"
            android:text="PDF" />

        <Button
            android:id="@+id/btnPrint"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="36dp"
            android:layout_gravity="right"
            android:layout_marginLeft="10dp"
            android:text="Print"
            android:textColor="#ffffff"
            android:background="@drawable/button_retangle"
            android:drawableLeft="@drawable/ic_printer"
            android:paddingLeft="8dp"
            android:paddingRight="0dp" />

    </LinearLayout>





</LinearLayout>