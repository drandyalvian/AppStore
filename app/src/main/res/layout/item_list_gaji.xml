<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/inputgaji"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@drawable/bg_list"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <ImageView
        android:id="@+id/icongaji"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/icon_gaji"/>

        <LinearLayout
            android:layout_toRightOf="@+id/icongaji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="0dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mregular"
                android:text="Sapa Nama"
                android:textSize="18sp"
                android:textColor="@color/color5"/>
            <TextView
                android:id="@+id/tGaji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mregular"
                android:text="Rp. 1.500.000"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/color4"/>
        </LinearLayout>

    <Button
        android:id="@+id/btnPayroll"
        android:layout_marginTop="20dp"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/myparoll"
        android:textColor="@color/color4" />
</RelativeLayout>